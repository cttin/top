/* components/video/video.wxss */
.video_view--container {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}

.video-wrap .control-btn {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 9999;
}

.btns-wrap {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 250rpx;
  display: flex;
  justify-content: center;
  z-index: 999;
}

.video-wrap .cover-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  z-index: 990;
}
